    <!-- Post response to question -->
<div class="container">
  <% if @errors %>
    <ul>
      <% @errors.each do |error| %>
        <li><%= error %></li>
      <% end %>
    </ul>
  <% end %>

  <form class="form-horizontal" method="POST" action="/questions/<%= @question.id %>/responses">

    <div class="form-group">
      <label for="responseQuestion">Response to question:</label>
      <textarea class="form-control" name="text" rows="3"></textarea>
    </div>

    <div>
    <button type="submit" class="btn btn-default">Submit</button>
    </div>

  </form>
</div>
